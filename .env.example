# Database Connection
DATABASE_HOST=your-database-host.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_NAME=mobilediaryapp
DATABASE_SSL_MODE=verify-full

# The Connection String (Crucial for Prisma/Sequelize)
DATABASE_URL="postgresql://postgres:your_password@your-host:5432/mobilediaryapp?sslmode=verify-full"

# Server Configuration
PORT=5050
NODE_ENV=development

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Email Service (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_app_password

# OTP Configuration
OTP_EXPIRY_MINUTES=5

# Cashfree Payment Gateway
CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_SECRET_KEY=your_cashfree_secret_key
CASHFREE_API_VERSION=2023-08-01
CASHFREE_ENV=SANDBOX
CASHFREE_WEBHOOK_SECRET=your_cashfree_webhook_secret

# Firebase FCM Push Notifications
# Download from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
